@model OnlineBookstore.Models.KhachHang
@{
    ViewBag.Title = "Đăng nhập";
}

<h2>Đăng nhập</h2>

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    @Html.ValidationSummary(true)

    <div class="form-group">
        @Html.LabelFor(model => model.TenDangNhap)
        @Html.TextBoxFor(model => model.TenDangNhap, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.TenDangNhap)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MatKhau)
        @Html.PasswordFor(model => model.MatKhau, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.MatKhau)
    </div>

    <button type="submit" class="btn btn-primary">Đăng nhập</button>
}